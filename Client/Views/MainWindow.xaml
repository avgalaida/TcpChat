<Window x:Class="Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клиент чата" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Список сообщений -->
        <ListBox ItemsSource="{Binding Messages}" Grid.Row="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Sender}" FontWeight="Bold" />
                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding Timestamp}" FontStyle="Italic" FontSize="10" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Область ввода -->
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBox Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}" Width="600" />
            <Button Content="Отправить" Command="{Binding SendMessageCommand}" />
        </StackPanel>
    </Grid>
</Window>